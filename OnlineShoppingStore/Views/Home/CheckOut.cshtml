@using OnlineShoppingStore.Models.Home;
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CheckOut</h2>

@if (Session["cart"] == null)
{
    <div class="alert alert-danger">
        <strong>No product added to cart!</strong>
    </div>

}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Preco</th>
                <th>Quantidade</th>
                <th>Acoes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Item item in (List<Item>)Session["cart"])
            {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Product.Price€</td>
                <td>@item.Quantity</td>
                <td>
                    <a href="@Url.Action("AddToCart", "Home", new { productId = item.Product.ProductId, url="Checkout" })">
                        <i class="bi bi-cart-plus-fill"></i>
                    </a>
                    <a href="@Url.Action("DecreaseQty", "Home", new { productId = item.Product.ProductId })">
                        <i class="bi bi-cart-dash"></i>
                    </a>
                </td>
            </tr>
            }

        </tbody>
    </table>
    <a class="btn btn-success" href="@Url.Action("CheckoutDetails","Home")">Continuar >></a>

}